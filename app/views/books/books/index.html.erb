<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Writer</th>
    <th>Translator</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.summary %></td>
    <td><%= book.writer %></td>
    <td><%= book.translator %></td>
    <td><%= book.price %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

